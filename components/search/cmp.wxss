/* components/seach/seach.wxss */



.search-wrap{
    position: fixed;
    left:0;
    right:0;
    top:140rpx;
    margin:8rpx auto;
    display:flex;
    box-sizing: border-box;
    width:700rpx;
    height:55rpx;
    background: rgba(233, 233, 233,0.83);
    border-radius:50rpx;
    align-items:center;
    z-index: 999;
}
.search-input{
    margin: 0rpx 5rpx;
    flex-grow:1;
}
.search-icon{
    margin:0 15rpx;
}

.data-container{
    position: absolute;
    top:70rpx;
    left:0; 
    width: 100%;
    border-radius: 20rpx;    
    min-height: 180rpx;
    background-color: rgba(233, 233, 233,0.93);
    padding: 12rpx 0;
    z-index:999;
}

.antistopWrap{
    width:100%;
}
.hotAntistop{
    font-size: 28rpx;
    border-bottom:2rpx solid #EB4C58;
    font-weight:600;
    color:rgb(255, 0, 55);
    width:95%;
    padding-bottom:6rpx;
    margin: 8rpx 15rpx;
}
.antistopItem{
    display: inline-block;
    font-weight:600;
    font-size:26rpx;
    padding:8rpx 12rpx;
    margin:8rpx 26rpx;
    border-radius: 8rpx;
    border:2rpx solid #999;
}
.searchVideo{
    display:flex;
    align-items: center;
    background:white;
    width:95%;
    margin: 25rpx 18.7rpx;
}
.videoCover{
    width:30%;
}
.info{
    width:70%;
    padding:5rpx 10rpx;
}
.videoName{
    display: block;
    font-size:30rpx;
    margin-bottom:8rpx;
}
.videoIntro{
    font-size:28rpx;
    height:35rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.nomorr{
    width:100%;
    font-size:28rpx;
    text-align: center;
    margin:20rpx 0;
    color:#888
}