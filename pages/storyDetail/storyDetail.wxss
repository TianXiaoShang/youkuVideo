/* pages/storyDetail/storyDetail.wxss */
@import '../../wxParse/wxParse.wxss';
.content-wrap{
    display:flex;
    position:relative;
    overflow:hidden;
    width:95%;
    /* height:440rpx; */
    margin:18rpx auto;
    align-items: center;
}
.content-bg{
    border:1px solid red;
    position:absolute;
    left:0;
    top:0;
    width:100%;
    height:100%;
    filter:blur(18px); 
    z-index: -1;   
}
.cover{
    margin:30rpx 15rpx;
    min-width:300rpx;
    max-width:300rpx;
}
    .info{
    flex-grow: 1;
    margin:30rpx 8rpx;    
}
.content-wrap .videoName{
    font-size:32rpx;
    font-weight:600;
    margin:0;
}
.info>view{
    margin-top:18rpx;
    font-size:26rpx;
    color:white;
}
.fillContent{
    font-size:26rpx;
    color:rgb(255, 255, 255);
}