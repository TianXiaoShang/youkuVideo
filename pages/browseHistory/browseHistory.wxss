/* 标题分类部分 */
.classify{
    display:flex;
    justify-content: space-around;
    width:100%;
    height:60rpx;
}
.classify>view{
    display: inline-block;
    text-align: center;
    line-height:60rpx;
    font-size: 30rpx;
    height:100%;
    color:white;
    transition:width 200ms linear;
}
.classify .title{
    background: -webkit-gradient(linear, 0% 0%, 100% 0%,from(#EB4C58), to(#FF8A30));
}

.classify .title2{
    background: -webkit-gradient(linear, 0% 0%, 100% 0%,from(#00BFFF), to(rgb(12, 205, 137)));        
}




