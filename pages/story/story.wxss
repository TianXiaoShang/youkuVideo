/* pages/story/story.wxss */
.detailWrap{
    width:92%;
    height:170rpx;
    margin: 0 auto;
    display:flex;
    margin-top:25rpx;
    /* border:2rpx solid rgb(214, 214, 214); */
    padding:20rpx 12rpx;
    border-radius: 30rpx;
    box-shadow: 10rpx 10rpx 8rpx #eee;
}
.videoInfo{
    position:relative;
    box-sizing: border-box;
    padding: 0 0rpx 8rpx 16rpx;
    flex-grow: 1;
    width:436rpx;
    height:100%;
}
.videoImg{
    width:260rpx;
}
/* 固定行数，实现多行溢出打点 */
.describe{
    text-indent:60rpx;
    letter-spacing:2rpx;
    font-size:26rpx;
    line-height:45rpx;
    display:inline-block;
    width:100%;
    height:90rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.update{
    color:#aaa;
    position:absolute;
    bottom:2rpx;
    font-size:26rpx;
}
.story-star{    
    position:absolute;
    bottom:2rpx;
    right:0;
    margin: 0 15rpx;
    width: 45rpx;
    height: 45rpx;
}
.noMoreData{
    font-size:28rpx;
    color:#aaa;
    text-align:center;
    padding:12rpx;
}